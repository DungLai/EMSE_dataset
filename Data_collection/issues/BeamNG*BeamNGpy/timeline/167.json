7, 15, 110),\r\n    (-307, 20, 100, 30), \r\n)\r\nscenario.add_mesh_road(road)\r\n\r\nvehicle = Vehicle('ego_vehicle', model='etk800', licence='PYTHON')\r\n\r\nscenario.add_vehicle(vehicle, pos=(-107, 20, 100))\r\nscenario.make(beamng)\r\nbeamng.load_scenario(scenario)\r\nbeamng.start_scenario()\r\n```","reactions":{"url":"https://api.github.com/repos/BeamNG/BeamNGpy/issues/comments/1170075271/reactions","total_count":0,"+1":0,"-1":0,"laugh":0,"hooray":0,"confused":0,"heart":0,"rocket":0,"eyes":0},"performed_via_github_app":null,"event":"commented","actor":{"login":"aivora-beamng","id":93574498,"node_id":"U_kgDOBZPVYg","avatar_url":"https://avatars.githubusercontent.com/u/93574498?v=4","gravatar_id":"","url":"https://api.github.com/users/aivora-beamng","html_url":"https://github.com/aivora-beamng","followers_url":"https://api.github.com/users/aivora-beamng/followers","following_url":"https://api.github.com/users/aivora-beamng/following{/other_user}","gists_url":"https://api.github.com/users/aivora-beamng/gists{/gist_id}","starred_url":"https://api.github.com/users/aivora-beamng/starred{/owner}{/repo}","subscriptions_url":"https://api.github.com/users/aivora-beamng/subscriptions","organizations_url":"https://api.github.com/users/aivora-beamng/orgs","repos_url":"https://api.github.com/users/aivora-beamng/repos","events_url":"https://api.github.com/users/aivora-beamng/events{/privacy}","received_events_url":"https://api.github.com/users/aivora-beamng/received_events","type":"User","site_admin":false}},{"id":6975860060,"node_id":"CE_lADOCEke6s5JHOxnzwAAAAGfyy1c","url":"https://api.github.com/repos/BeamNG/BeamNGpy/issues/events/6975860060","actor":{"login":"aivora-beamng","id":93574498,"node_id":"U_kgDOBZPVYg","avatar_url":"https://avatars.githubusercontent.com/u/93574498?v=4","gravatar_id":"","url":"https://api.github.com/users/aivora-beamng","html_url":"https://github.com/aivora-beamng","followers_url":"https://api.github.com/users/aivora-beamng/followers","following_u