s://api.github.com/repos/luanyi/DyGIE/stargazers","contributors_url":"https://api.github.com/repos/luanyi/DyGIE/contributors","subscribers_url":"https://api.github.com/repos/luanyi/DyGIE/subscribers","subscription_url":"https://api.github.com/repos/luanyi/DyGIE/subscription","commits_url":"https://api.github.com/repos/luanyi/DyGIE/commits{/sha}","git_commits_url":"https://api.github.com/repos/luanyi/DyGIE/git/commits{/sha}","comments_url":"https://api.github.com/repos/luanyi/DyGIE/comments{/number}","issue_comment_url":"https://api.github.com/repos/luanyi/DyGIE/issues/comments{/number}","contents_url":"https://api.github.com/repos/luanyi/DyGIE/contents/{+path}","compare_url":"https://api.github.com/repos/luanyi/DyGIE/compare/{base}...{head}","merges_url":"https://api.github.com/repos/luanyi/DyGIE/merges","archive_url":"https://api.github.com/repos/luanyi/DyGIE/{archive_format}{/ref}","downloads_url":"https://api.github.com/repos/luanyi/DyGIE/downloads","issues_url":"https://api.github.com/repos/luanyi/DyGIE/issues{/number}","pulls_url":"https://api.github.com/repos/luanyi/DyGIE/pulls{/number}","milestones_url":"https://api.github.com/repos/luanyi/DyGIE/milestones{/number}","notifications_url":"https://api.github.com/repos/luanyi/DyGIE/notifications{?since,all,participating}","labels_url":"https://api.github.com/repos/luanyi/DyGIE/labels{/name}","releases_url":"https://api.github.com/repos/luanyi/DyGIE/releases{/id}","deployments_url":"https://api.github.com/repos/luanyi/DyGIE/deployments","created_at":"2019-03-20T02:40:05Z","updated_at":"2022-11-25T01:39:50Z","pushed_at":"2019-12-05T20:55:42Z","git_url":"git://github.com/luanyi/DyGIE.git","ssh_url":"git@github.com:luanyi/DyGIE.git","clone_url":"https://github.com/luanyi/DyGIE.git","svn_url":"https://github.com/luanyi/DyGIE","homepage":null,"size":109,"stargazers_count":167,"watchers_count":167,"language":"Python","has_issues":true,"has_projects":true,"has_downloads":true,"has_wiki":true,"has_pages":false,"has_discus